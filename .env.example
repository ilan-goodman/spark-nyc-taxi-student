# Data locations
DATA_RAW=data/raw
CURATED_OUT=data/curated/yellow
AGG_OUT=data/aggregates

# Spark tuning
SHUFFLE_PARTITIONS=200

# Snowflake: leave false until your local environment is ready
WRITE_SNOWFLAKE=false
SF_URL=<your_account>.snowflakecomputing.com
SF_USER=<your_username>
# Optional fallback if your policy allows it (usually not when MFA enforced)
SF_PASSWORD=
SF_DATABASE=<your_db>
SF_SCHEMA=<your_schema>
SF_WAREHOUSE=<your_warehouse>

# Key-pair auth (preferred)
# Base64-encoded contents of your PKCS#8 private key file
SF_PRIVATE_KEY_B64=
# Passphrase for your private key (if set)
SF_PRIVATE_KEY_PASSPHRASE=
# Authenticator (default 'snowflake', or 'externalbrowser' for SSO)
SF_AUTHENTICATOR=snowflake

# Spark packages for Snowflake connector (set correct versions for your Spark)
SPARK_PACKAGES=net.snowflake:spark-snowflake_2.12:2.13.1-spark_3.5,net.snowflake:snowflake-jdbc:3.16.2

# Choose application file
SPARK_APP=jobs/nyc_taxi_etl_template.py
